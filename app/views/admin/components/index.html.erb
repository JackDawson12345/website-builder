<div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="mb-8 flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Components</h1>
    <%= link_to "Create New Component", new_admin_component_path,
                class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      <% @components.each do |component| %>
        <li>
          <div class="px-4 py-4 flex items-center justify-between">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= component.component_type.humanize %>
                </span>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= component.name %>
                </div>
                <div class="text-sm text-gray-500">
                  Editable fields: <%= component.editable_fields_array.join(', ') %>
                </div>
              </div>
            </div>

            <div class="flex items-center space-x-2">
              <%= link_to "Preview", preview_admin_component_path(component),
                          class: "text-green-600 hover:text-green-900", target: "_blank" %>
              <%= link_to "View", admin_component_path(component),
                          class: "text-blue-600 hover:text-blue-900" %>
              <%= link_to "Edit", edit_admin_component_path(component),
                          class: "text-yellow-600 hover:text-yellow-900" %>
              <%= link_to "Delete", admin_component_path(component), method: :delete,
                          confirm: "Are you sure?", class: "text-red-600 hover:text-red-900" %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>

  <% if @components.empty? %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg">No components created yet.</p>
      <%= link_to "Create your first component", new_admin_component_path,
                  class: "mt-4 inline-block bg-blue-500 text-white px-6 py-3 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>