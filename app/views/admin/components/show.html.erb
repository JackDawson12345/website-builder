<div class="max-w-4xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @component.name %></h1>
      <p class="mt-1 text-sm text-gray-600">
        Component Type: <span class="font-semibold"><%= @component.component_type.humanize %></span>
      </p>
    </div>

    <div class="flex space-x-2">
      <%= link_to "Preview", preview_admin_component_path(@component),
                  class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600", target: "_blank" %>
      <%= link_to "Edit", edit_admin_component_path(@component),
                  class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600" %>
      <%= link_to "Back to Components", admin_components_path,
                  class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6">
    <!-- Editable Fields -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Editable Fields</h3>
      <div class="flex flex-wrap">
        <% @component.editable_fields_array.each do |field| %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-2 mb-2">
            <%= field %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- HTML Content -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">HTML Content</h3>
      <pre class="bg-gray-100 p-4 rounded-md overflow-x-auto text-sm"><code><%= @component.html_content %></code></pre>
    </div>

    <!-- CSS Content -->
    <% if @component.css_content.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">CSS Content</h3>
        <pre class="bg-gray-100 p-4 rounded-md overflow-x-auto text-sm"><code><%= @component.css_content %></code></pre>
      </div>
    <% end %>

    <!-- JavaScript Content -->
    <% if @component.js_content.present? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">JavaScript Content</h3>
        <pre class="bg-gray-100 p-4 rounded-md overflow-x-auto text-sm"><code><%= @component.js_content %></code></pre>
      </div>
    <% end %>
  </div>
</div>