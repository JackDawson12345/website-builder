<%= simple_form_for [:admin, @theme, @theme_page], html: { class: "space-y-6" } do |f| %>
  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Page Information</h3>
        <p class="mt-1 text-sm text-gray-500">
          Configure the page type and position.
        </p>
      </div>

      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="space-y-6">
          <%= f.input :page_type,
                      collection: @available_page_types,
                      prompt: "Select page type",
                      input_html: {
                        class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                      } %>

          <%= f.input :position,
                      input_html: {
                        class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
                        min: 1
                      },
                      hint: "Order in which this page appears in navigation" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", admin_theme_path(@theme),
                class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <%= f.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
  </div>
<% end %>